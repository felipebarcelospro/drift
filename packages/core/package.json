{
  "name": "@drift-kv/core",
  "version": "0.1.0",
  "description": "A powerful ORM for Deno KV and Node.js",
  "keywords": [
    "orm",
    "database",
    "deno",
    "kv",
    "typescript",
    "node",
    "key-value"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/**"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:npm",
    "build:npm": "tsup",
    "test": "vitest",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "clean": "rm -rf dist deno",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@deno/kv": "^0.8.3",
    "zod": "^3.22.4"
  },
  "peerDependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^8.54.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "deno": {
      "importMap": "./deno.json"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/felipebarcelospro/drift-kv.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/felipebarcelospro/drift-kv/issues"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true,
    "splitting": false,
    "clean": true,
    "minify": true
  }
}

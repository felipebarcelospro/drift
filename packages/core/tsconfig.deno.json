{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./deno",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "mod.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
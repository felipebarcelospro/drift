{
  "name": "@drift-kv/core",
  "version": "0.1.0",
  "description": "A powerful ORM for Deno KV with integrated support for database operations, real-time subscriptions, task queues, plugin system, and typed queries.",
  "author": "Felipe Barcelos <felipebarcelospro@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/felipebarcelospro/drift-kv.git"
  },
  "exports": {
    ".": "./src/index.ts"
  },
  "publish": {
    "include": [
      "README.md",
      "LICENSE",
      "mod.ts", 
      "src/**/*.ts"
    ],
    "exclude": [
      "**/test/**",
      "**/*.test.ts",
      "**/dist/**"
    ]
  },
  "tasks": {
    "check": "deno check ./src/index.ts"
  },
  "fmt": {
    "include": ["src/", "mod.ts"],
    "exclude": ["**/*.js", "**/*.map"],
    "lineWidth": 80,
    "semiColons": true,
    "singleQuote": false
  },
  "lint": {
    "include": ["src/", "mod.ts"],
    "rules": {
      "tags": ["recommended"]
    }
  }
}